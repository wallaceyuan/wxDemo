.tc{text-align:center;}
.timeline textarea{width:100%;}
.fucButton{position:absolute;bottom:0;left:10px;width:100%;}
.fucButton button{display:inline-block;width:33%;}
.timeline .button button{display:inline-block;box-sizing:border-box;width:50%;border:1px solid #ddd;text-align:center;font-size:15px;}
.tc video{margin-bottom:10rpx;}
.page-header-text{padding:40rpx;font-size:100rpx;}
.user{display:flex;flex-direction:column;align-items:center;}
.user-avatar{margin:20rpx;width:520rpx;height:520rpx;}
.user-nickname{color:#aaa;}
.usermotto{margin-top:200px;}

page{
  background-color:#eceff4;
}
.timeline{position: relative;}
.timeline a.addTxt{
  position: fixed;
  bottom: 10rpx;right: 10rpx;
  background:orange url('http://www.wallaceyuan.site/skin/images/wx/demo/add.png') no-repeat top center;
  background-size: 100% 100%;
  width:64rpx;
  height:64rpx;
}
.item-container {
  margin-top:10px;
  padding:10px;
  position: relative;
  background: #fff;
}
.cover {
  width: 100%;
  display: block;
  margin-bottom:20rpx;
}
.desc {
  font-size:30rpx;
  word-wrap:break-word;
  margin-bottom: 30rpx;
}
.address{
  display: flex;
  flex-flow: row wrap;
}
.address text{
  margin-left:10rpx;
  height:30rpx;
  line-height: 30rpx;
  font-size:27rpx;
}
.picon{
  display:inline-block;
  width:30rpx;height:30rpx;
  background:url('http://www.wallaceyuan.site/skin/images/wx/demo/tabbar/place.png') center center no-repeat;
  background-size:100% 100%;
}
.opeImg{
    position: absolute;top: 10rpx;right: 0rpx;
    width: 45rpx;height: 30rpx;
    padding: 10rpx;
    background:url('http://www.wallaceyuan.site/skin/images/wx/demo/arrowDown.png') center center no-repeat;
    background-size:100% 100%;
}